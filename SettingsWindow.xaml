<Window x:Class="loopman.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loopman"
        mc:Ignorable="d"
        Title="SettingsWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Width="394" Height="227">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" MinHeight="45"/>
            <RowDefinition Height="15*" MinHeight="45"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Text="Device" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Normal" Margin="5,0,0,0" Height="15" Width="89"/>
        <ComboBox x:Name="cbDevice" SelectionChanged="cbDevice_SelectionChanged" Margin="5,10,10,10" Grid.ColumnSpan="3" Grid.Column="1"/>

        <Rectangle Grid.Row="1" Grid.ColumnSpan="4" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" StrokeThickness="0"/>
        <TextBlock HorizontalAlignment="Left" Text="MIDI" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Normal" Grid.Row="1" Margin="5,0,0,0" Height="15" Width="89"/>
        <ComboBox x:Name="cbMidiDevice" SelectionChanged="cbMidiDevice_SelectionChanged" Grid.Row="1" Margin="5,10,10,10" Grid.ColumnSpan="3" Grid.Column="1"/>

        <TextBlock HorizontalAlignment="Left" Text="MIDI Mapping" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Normal" Grid.Row="2" Margin="5,0,0,0" Width="89"/>
        <Button x:Name="bMidiPlayRecord" Content="►/●" Padding="1,0,1,1" FontSize="14" FontWeight="Bold" Click="bMidiPlayRecord_Click" FontFamily="Arial Black" Grid.Row="2" Grid.Column="2" Margin="10,5,10,0" VerticalAlignment="Top" Height="19"/>
        <TextBlock x:Name="tbMidiPlayRecordMap" HorizontalAlignment="Stretch" Text="---" VerticalAlignment="Bottom" FontWeight="Normal" Grid.Row="2" Margin="0,0,0,3" Width="89" Grid.Column="2" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" TextAlignment="Center"/>
        <Button x:Name="bMidiStop" Content="■" Padding="0,-6,1,1" FontSize="20" FontWeight="Bold" Click="bMidiStop_Click" FontFamily="Arial Black" BorderThickness="1,1,1,1" UseLayoutRounding="False" Grid.Row="2" Grid.Column="3" Margin="10,5,10,0" Height="19" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbMidiStopMap" HorizontalAlignment="Stretch" Text="---" VerticalAlignment="Bottom" FontWeight="Normal" Grid.Row="2" Margin="0,0,0,3" Width="89" Grid.Column="3" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" TextAlignment="Center"/>

        <Button x:Name="bCancel" Content="Cancel" Margin="5,5,5,5" Grid.Row="4" Padding="1,1,1,1" IsCancel="True" Grid.Column="2" Click="bCancel_Click"/>
        <Button x:Name="bOK" Content="OK" Margin="5,5,5,5" Grid.Row="4" Padding="1,1,1,1" IsDefault="True" Grid.Column="3" Click="bOK_Click"/>

    </Grid>
</Window>
